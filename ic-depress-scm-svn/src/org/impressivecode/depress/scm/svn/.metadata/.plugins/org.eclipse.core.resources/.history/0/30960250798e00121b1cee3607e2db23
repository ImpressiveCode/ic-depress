package org.knime.svn;

import org.knime.core.node.NodeDialogPane;
import org.knime.core.node.NodeFactory;
import org.knime.core.node.NodeView;

/**
 * <code>NodeFactory</code> for the "SVN" Node.
 * 
 *
 * @author KNIME
 */
public class SVNNodeFactory 
        extends NodeFactory<SVNNodeModel> {

    /**
     * {@inheritDoc}
     */
    @Override
    public SVNNodeModel createNodeModel() {
        return new SVNNodeModel();
    }

    /**
     * {@inheritDoc}
     */
    @Override
    public int getNrNodeViews() {
        return 1;
    }

    /**
     * {@inheritDoc}
     */
    @Override
    public NodeView<SVNNodeModel> createNodeView(final int viewIndex,
            final SVNNodeModel nodeModel) {
        return new SVNNodeView(nodeModel);
    }

    /**
     * {@inheritDoc}
     */
    @Override
    public boolean hasDialog() {
        return true;
    }

    /**
     * {@inheritDoc}
     */
    @Override
    public NodeDialogPane createNodeDialogPane() {
        return new SVNNodeDialog();
    }

}

