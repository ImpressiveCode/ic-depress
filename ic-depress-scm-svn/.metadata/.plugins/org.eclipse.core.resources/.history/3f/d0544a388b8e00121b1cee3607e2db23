public class SVNPluginNodeDialog extends NodeDialogPane {

	private DialogComponentFileChooser pathChooserDialog;
	private DialogComponentString issueMakerDialog;
	private DialogComponentString packageDialog;

	/**
	 * New pane for configuring MyNode01 node dialog. This is just a suggestion
	 * to demonstrate possible default dialog components.
	 */
	protected SVNPluginNodeDialog() {
		super();
		GridLayout experimentLayout = new GridLayout(0, 3);

		pathChooserDialog = new DialogComponentFileChooser(
				SVNPluginSettings.XML_PATH_MODEL,
				SVNPluginSettings.CFG_SVN_PATH, "*.xml");

		issueMakerDialog = new DialogComponentString(
				SVNPluginSettings.ISSUE_MARKER_MODEL,
				SVNPluginLocale.nIssueMarker());

		packageDialog = new DialogComponentString(
				SVNPluginSettings.PACKAGE_MODEL, SVNPluginLocale.nPackage());

		super.getPanel().add(pathChooserDialog.getComponentPanel());
		super.getPanel().add(issueMakerDialog.getComponentPanel());
		super.getPanel().add(packageDialog.getComponentPanel());

		super.getPanel().setLayout(experimentLayout);

	}

	@Override
	protected void saveSettingsTo(NodeSettingsWO arg0)
			throws InvalidSettingsException {

	}

	@Override
	protected void loadSettingsFrom(NodeSettingsRO settings,
			PortObjectSpec[] specs) throws NotConfigurableException {
	}
}
