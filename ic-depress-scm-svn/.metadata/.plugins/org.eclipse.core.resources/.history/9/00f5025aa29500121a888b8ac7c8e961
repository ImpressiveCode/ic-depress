public class SVNLogRowSpec {
	
	private static ArrayList<String> columns;
	
	static
	{
		columns = new ArrayList<>();
	}
	
	public static DataTableSpec[] createTableSpec() {

		
	ArrayList<String> ci;
	ci.to
		
		return new DataTableSpec[] { stringTableSpec("ClassName"),
				stringTableSpec("Marker"), stringTableSpec("Author"),
				stringTableSpec("Action"), stringTableSpec("Message"),
				stringTableSpec("Path"), stringTableSpec("Date"),
				stringTableSpec("Uid") };

	}

	private static DataTableSpec stringTableSpec(String inName) {
		return new DataTableSpec(stringColumnSpec(inName));
	}

	private static DataColumnSpec stringColumnSpec(String inName) {

		DataColumnSpecCreator colSpecCreator = new DataColumnSpecCreator(
				inName, StringCell.TYPE);

		DataColumnDomainCreator domainCreator = new DataColumnDomainCreator(
				new StringCell(""), new StringCell(""));

		colSpecCreator.setDomain(domainCreator.createDomain());

		return colSpecCreator.createSpec();
	}

	public static DataColumnSpec[] createColumnSpec() {
		return new DataColumnSpec[] { stringColumnSpec("ClassName"),
				stringColumnSpec("Marker"), stringColumnSpec("Author"),
				stringColumnSpec("Action"), stringColumnSpec("Message"),
				stringColumnSpec("Path"), stringColumnSpec("Date"),
				stringColumnSpec("Uid") };
	}

}
